<div class="container-fluid">
    {{ form_start(form) }}
    <div class="row">
        {% for field in form %}
            {% if field.vars.name != '_token' %}
                <div class="col-md-6 col-12 mb-3">
                    <div class="form-group">
                        {{ form_row(field) }}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="d-flex">
        <div class="d-none">
            {{ form_widget(form._token) }} {# optional hidden CSRF field #}
        </div>

        {{ form_end(form) }}
        {% if button_label is defined %}
            <div class="m-1">
                {{ include('book/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>
</div>
