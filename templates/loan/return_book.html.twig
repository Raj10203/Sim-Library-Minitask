{% extends 'base.html.twig' %}

{% set current_page = 'aside-menu-loan-return' %}

{% block title %}Edit Book{% endblock %}

{% block additional_js %}
    {{ include('partials/active_menu_script.html.twig') }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Loan Details</h5>
            <div>
                <a href="{{ path('app_loan_borrow') }}" class="btn btn-secondary">
                    <i class="bx bx-arrow-back me-0 me-sm-1"></i>
                    <span class="d-none d-sm-inline-block">Back to List</span>
                </a>
            </div>
        </div>
        <div class="container-fluid">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ loan.id }}</td>
                </tr>
                <tr>
                    <th>Book Title</th>
                    <td>{{ loan.book.title }}</td>
                </tr>
                <tr>
                    <th>Book Author</th>
                    <td>{{ loan.book.author }}</td>
                </tr>
                <tr>
                    <th>Due At</th>
                    <td>{{ loan.dueAt ? loan.dueAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Borrowed At</th>
                    <td>{{ loan.dueAt ? loan.dueAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
            <div class="m-2">
                {{ include('loan/_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
