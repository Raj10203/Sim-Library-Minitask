{% extends 'base.html.twig' %}

{% set current_page = 'aside-menu-loan-borrow' %}

{% block title %}Borrow Book{% endblock %}

{% block additional_js %}
    {{ include('partials/active_menu_script.html.twig') }}
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Available Books</h5>
        </div>
        <div class="my-2">
            <div class="table-responsive text-nowrap scrollable-container overflow-hidden">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for book in books %}
                        <tr>
                            <td>{{ book.id }}</td>
                            <td>{{ book.title }}</td>
                            <td>{{ book.author }}</td>
                            <td>
                                <a href="{{ path('app_loan_borrow_book', {'id': book.id}) }}" class="btn btn-xs btn-success">
                                    <i class='menu-icon bx bx-book-add'></i>
                                    Borrow Book
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="mt-2 ms-2 pagination">
                    <div class="navigation">
                        {{ knp_pagination_render(books) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}