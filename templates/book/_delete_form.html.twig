<form method="post" action="{{ path('app_book_delete', {'id': book.id}) }}" id="delete_site_form"
      class="delete-form" data-product-name="{{ site.name|default('this item') }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

