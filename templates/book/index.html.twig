{% extends 'base.html.twig' %}

{% set current_page = 'aside-menu-book' %}

{% block title %}Book index{% endblock %}

{% block additional_js %}
    {{ include('partials/active_menu_script.html.twig') }}
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Books</h5>
            <a href="{{ path('app_book_new') }}" class="btn btn-primary">
                <i class="bx bx-plus me-0 me-sm-1"></i>
                <span class="d-none d-sm-inline-block">Add Book</span>
            </a>
        </div>
        <div class="table-responsive text-nowrap scrollable-container overflow-hidden">


            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>IsAvailable</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for book in books %}
                    <tr>
                        <td>{{ book.id }}</td>
                        <td>{{ book.title }}</td>
                        <td>{{ book.author }}</td>
                        <td>{{ book.isAvailable ? 'Yes' : 'No' }}</td>
                        <td>
                            <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-primary">
                                <i class='bx bx-show-alt'></i>
                            </a>
                            <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-success">
                                <i class='bx bxs-edit'></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
