{% extends 'base.html.twig' %}

{% set current_page = 'aside-menu-book' %}

{% block title %}Book{% endblock %}

{% block additional_js %}
    {{ include('partials/active_menu_script.html.twig') }}
{% endblock %}

{% block body %}
<div class="card pb-2 container-fluid">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Site</h5>
        <div>
            <a href="{{ path('app_book_index') }}" class="btn btn-secondary">
                <i class="bx bx-arrow-back me-0 me-sm-1"></i>
                <span class="d-none d-sm-inline-block">Back to List</span>
            </a>
            <a href="{{ path('app_book_new') }}" class="btn btn-primary">
                <i class="bx bx-plus me-0 me-sm-1"></i>
                <span class="d-none d-sm-inline-block">Add Site</span>
            </a>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ book.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex p-2">
        <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-primary">Edit</a>
    </div>
</div>
{% endblock %}
