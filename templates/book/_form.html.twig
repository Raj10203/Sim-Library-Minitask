<div class="container-fluid">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6 col-12 mb-3 ">
            <div class="col-12">
                {{ form_row(form.title) }}
            </div>

        </div>
        <div class="col-md-6 col-12 mb-3">
            <div class="col-12">
                {{ form_row(form.author) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-12 mb-3 d-flex">
            {{ form_label(form.isAvailable) }}
            <div class="mx-2 form-check">
                {{ form_widget(form.isAvailable) }}
            </div>
        </div>
    </div>
    <div class="d-flex">
        <div class="mt-3">
            {{ form_widget(form._token) }} {# optional hidden CSRF field #}
        </div>
        <div class="m-1">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
        {{ form_end(form) }}
        {% if button_label is defined %}
            <div class="m-1">
                {{ include('book/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>
</div>
